{
  "manifest_version": 3,
  "name": "Sora Auto Liker - Aggressive Mode",
  "version": "2.0",
  "description": "Automatically like Sora posts at maximum speed - Multi-threaded aggressive mode",
  "default_locale": "en",
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://sora.chatgpt.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://sora.chatgpt.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
